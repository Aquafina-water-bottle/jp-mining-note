  "cardCache.enabled": {
    "type": "isMobile",
    "resultTrue":  true,
    "resultFalse": false,
  },

  // console.warn and console.error are not defined on AnkiMobile!!!
  // Any calls to those will crash javascript with no error message!!
  "logger.toConsole": {
    "type": "isAnkiMobile",
    "resultTrue": false,
    "resultFalse": true,
  },


  "infoCircleUtils.mobileDialog": {
