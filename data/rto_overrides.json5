  "sentenceParser.quotes.quoteOpen": {
    "type": "cardType",
    "args": {
      "op": "===",
      "cardType": "pa_sent",
    },
    "resultTrue":  "『",
    "resultFalse": "「",
  },

  "sentenceParser.quotes.quoteClose": {
    "type": "cardType",
    "args": {
      "op": "===",
      "cardType": "pa_sent",
    },
    "resultTrue":  "』",
    "resultFalse": "」",
  },

  "blockquotes.folderTab.enabled": {
    "type": "viewportWidthBreakpoint",
    "args": {
      "op": "<=",
      "value": "combinePicture",
    },
    "resultTrue": true,
    "resultFalse": false,
  },

