{
  "debug.level": 1,
  //"debug.toConsole": true,
  "debug.toConsole": false,

  //"debug.onlyShowCertainModules": true,
  //"debug.onlyShowCertainModules.modules": ["sentUtils"],


  // enable all warnings
  "warnOnNoSentenceReading": true,
  "warnIfFilledSentenceReadingWithEmptySentence": true,

  "sentUtils.fixDivList.warnOnFix": true,
  "sentUtils.autoHighlightWord.warnOnAutoHighlight": true,
  "sentUtils.autoHighlightWord.warnIfAutoHighlightFails": true,

  "autoPitchAccent.paOverride.warnOnInvalidFormat": true,



  // always remove final period
  "sentUtils.removeFinalPeriod.fullSent.quoted": true,
  "sentUtils.removeFinalPeriod.fullSent.unquoted": true,
  "sentUtils.removeFinalPeriod.display.quoted": true,
  "sentUtils.removeFinalPeriod.display.unquoted": true,
  "sentUtils.removeFinalPeriod.altDisplay.quoted": true,
  "sentUtils.removeFinalPeriod.altDisplay.unquoted": true,


  // disables on mobile
  "sentUtils.display.quotes.paIndicatorColor.main": {
    "type": "viewport",
    "args": {
      "op": ">=",
      "value": 620, // combine pic breakpoint
    },
    "resultTrue":  true,
    "resultFalse": false,
  },

  "sentUtils.display.quotes.paIndicatorColor.paSent": {
    "type": "viewport",
    "args": {
      "op": ">=",
      "value": 620, // combine pic breakpoint
    },
    "resultTrue":  true,
    "resultFalse": false,
  },


}
