{
  "debug.level": 3,
  //"debug.toConsole": true,
  "debug.toConsole": false,

  //"debug.onlyShowCertainModules": true,
  //"debug.onlyShowCertainModules.modules": ["sentenceParser"],


  // enable all warnings
  "warnOnNoSentenceReading": true,
  "warnIfFilledSentenceReadingWithEmptySentence": true,

  "sentenceParser.fixDivList.warnOnFix": true,
  "sentenceParser.autoHighlightWord.warnOnAutoHighlight": true,
  "sentenceParser.autoHighlightWord.warnIfAutoHighlightFails": true,

  "autoPitchAccent.paOverride.warnOnInvalidFormat": true,



  // always remove final period
  "sentenceParser.removeFinalPeriod.fullSent.quoted": true,
  "sentenceParser.removeFinalPeriod.fullSent.unquoted": true,
  "sentenceParser.removeFinalPeriod.display.quoted": true,
  "sentenceParser.removeFinalPeriod.display.unquoted": true,
  "sentenceParser.removeFinalPeriod.altDisplay.quoted": true,
  "sentenceParser.removeFinalPeriod.altDisplay.unquoted": true,


  // disables on mobile
  "sentenceParser.display.quotes.paIndicatorColor.main": {
    "type": "viewport",
    "args": {
      "op": ">=",
      "value": 620, // combine pic breakpoint
    },
    "resultTrue":  true,
    "resultFalse": false,
  },

  "sentenceParser.display.quotes.paIndicatorColor.paSent": {
    "type": "viewport",
    "args": {
      "op": ">=",
      "value": 620, // combine pic breakpoint
    },
    "resultTrue":  true,
    "resultFalse": false,
  },


}
